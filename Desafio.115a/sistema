from lib.interface import *

while True:
    opcao = menu(['Ver pessoas cadastradas.', 'Cadastrar pessoas.', 'Sair do Sistema.'])
    if opcao == 1:
        print('Opção 1')
    elif opcao == 2:
        print('Opção 2')
    elif opcao == 3:
        print('Opção 3')
    else:
        print('\033[31mERRO: Digite uma opção válida!\033[m')
        