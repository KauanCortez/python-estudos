distancia_da_viagem = int(input('\033[1;36mPara que eu calcule o valor da sua passagem,\npor favor, digite a distância até o seu\nlocal de destino em km:\033[m '))

print('\033[2;33m-=-\033[m' * 15)
print(' ')

if distancia_da_viagem <= 200:
    valor_da_passagem = distancia_da_viagem * 0.50
else:
    valor_da_passagem = distancia_da_viagem * 0.45

print(f'\033[1;36mO valor da sua passagem é:\033[m \033[1;32mR${valor_da_passagem :.2f}\033[m')
